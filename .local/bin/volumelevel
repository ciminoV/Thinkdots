#!/bin/sh
# changeVolume

# Arbitrary but unique message tag
msgTag="myvolume"

# Query pamixer for the current volume and whether or not the speaker is muted
volume="$(pamixer --get-volume)"
mute="$(pamixer --get-mute)"
if [[ $volume == 0 || "$mute" == "true" ]]; then
    # Show the sound muted notification
    dunstify -a "changeVolume" -u low -h string:x-dunst-stack-tag:$msgTag "婢 Volume muted" 
else
    # Show the volume notification
    dunstify -a "changeVolume" -u low -h string:x-dunst-stack-tag:$msgTag -h int:value:"$volume" " Volume: ${volume}%"
fi
