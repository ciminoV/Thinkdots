# Function to source files if they exist
function zsh_add_file() {
    [ -f "$ZDOTDIR/$1" ] && source "$ZDOTDIR/$1"
}

# Useful fzf functions
doc(){
    cd "$(find $HOME/Documents/* -maxdepth 1 -type d | fzf)" && vifm .
}

cdd(){
    cd "$(find $HOME/ -maxdepth 3 -type d | fzf)" 
}

se(){
    vim "$(find $HOME/.dotfiles/.local/bin/ -type f | fzf)"
}
