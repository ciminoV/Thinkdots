# Add custom script folder to PATH
export PATH="$PATH:${$(find ~/.local/bin -type d -printf %p:)%%:}"

# History in cache directory
HISTSIZE=10000000
SAVEHIST=10000000
HISTFILE=~/.cache/zsh/history

# Default programs
export EDITOR="nvim"
export TERMINAL="st"
export BROWSER="brave"
export MUSIC="spotify"

# Default directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

# Home clean
export XINITRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc"
export XSERVERRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xserverrc"
export XAUTHORITY="${XDG_RUNTIME_DIR:-$HOME}/Xauthority"
export CARGO_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/cargo"
export NPM_CONFIG_USERCONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/npm/npmrc"
export STACK_ROOT="${XDG_DATA_HOME:-$HOME/.local/share}/stack"
export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc-2.0"

# MATLAB fix
export _JAVA_AWT_WM_NONREPARENTING=1
